<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:width="50dp"
        android:background="@drawable/yellow_circle_object"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:layout_centerHorizontal="true"
        android:text="ALARM"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="30dp"
        android:text="00:00"
        android:textSize="130sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_timepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="@string/edit_alarm_button"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button"
        android:paddingVertical="5dp"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_timepicker"
        android:layout_marginTop="27dp"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/cancel_alarm_button"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button"
        android:paddingVertical="5dp"/>

    <Button
        android:id="@+id/button_normal_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="try camera"/>

</RelativeLayout>